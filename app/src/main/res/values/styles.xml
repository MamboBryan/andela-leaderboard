<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="CustomTabTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primaryTextColor</item>
        <item name="tabBackground">@color/primaryColor</item>
        <item name="tabRippleColor">@color/primaryLightColor</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabSelectedTextColor">@color/primaryTextColor</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
    </style>


</resources>