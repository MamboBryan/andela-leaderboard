<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryTextColor</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="CustomTabTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primaryTextColor</item>
        <item name="tabBackground">@color/primaryColor</item>
        <item name="tabRippleColor">@color/primaryLightColor</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabSelectedTextColor">@color/primaryTextColor</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">24dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/primaryTextColor</item>
        <item name="boxStrokeColor">@color/primaryTextColor</item>
        <item name="editTextStyle">@style/CustomEditText</item>
        <item name="hintTextColor">@android:color/black</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:bottomRightRadius">10dp</item>
    </style>


</resources>